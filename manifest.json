{
  "manifest_version": 3,
  "name": "Minimalist Task Manager",
  "version": "1.3.0",
  "description": "A minimalist task manager and multi-mode meditation zone to enhance focus and productivity.",
  "permissions": [
    "storage",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/LOGO.png",
      "48": "assets/icons/LOGO.png",
      "128": "assets/icons/LOGO.png"
    }
  },
  "icons": {
    "16": "assets/icons/LOGO.png",
    "48": "assets/icons/LOGO.png",
    "128": "assets/icons/LOGO.png"
  },
  "chrome_url_overrides": {
    "newtab": "popup.html"
  }
}
